[core]
    editor = nvim
[push]
    default = simple
[diff]
    tool = nvimdiff
    noprefix = true
    renames = copies
[difftool]
    prompt = True
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    path = nvim
[alias]
    st = status --short --branch
    lol = log --all --graph --decorate --pretty=format:\"%C(yellow)%h%Creset %ad %C(green)%an %C(red)%s%Creset %d\" --date=short
    diffc = diff --cached
