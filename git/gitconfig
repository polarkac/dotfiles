[core]
    editor = nvim
[push]
    default = simple
[diff]
    tool = nvimdiff
    noprefix = true
    renames = copies
[difftool]
    prompt = True
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
    st = status --short --branch
    lol = log --all --graph --decorate --oneline --abbrev-commit
    diffc = diff --cached
